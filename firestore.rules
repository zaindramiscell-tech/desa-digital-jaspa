rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if the user is an authenticated admin
    function isAdmin() {
      return request.auth != null && 
             exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // Users collection rules:
    // - Only logged-in users can read their own profile.
    // - Anyone can create a user profile (for signup).
    // - Only admins can update or delete user profiles.
    match /users/{userId} {
      allow read: if request.auth != null && request.auth.uid == userId;
      allow create: if true;
      allow update, delete: if isAdmin();
    }

    // Public data collections (berita, dataDesa, profilDesa, sdgs, setelan)
    // - Anyone can read.
    // - Only admins can create, update, or delete.
    match /{collection}/{docId} {
      allow read: if true;
      allow write: if isAdmin();
    }
  }
}
